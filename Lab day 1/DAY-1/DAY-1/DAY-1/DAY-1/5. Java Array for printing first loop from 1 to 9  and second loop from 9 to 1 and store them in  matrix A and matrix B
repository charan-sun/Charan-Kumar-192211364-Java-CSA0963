public class ArrayMatrices {
    public static void main(String[] args) {
        int size = 9;
        int[] matrixA = new int[size];
        int[] matrixB = new int[size];
        for (int i = 0; i < size; i++) {
            matrixA[i] = i + 1;
        for (int i = 0; i < size; i++) {
            matrixB[i] = size - i;
        }
        System.out.print("Matrix A: ");
        for (int i = 0; i < size; i++) {
            System.out.print(matrixA[i] + " ");
        }
        System.out.println();
        System.out.print("Matrix B: ");
        for (int i = 0; i < size; i++) {
            System.out.print(matrixB[i] + " ");
        }
    }
}
