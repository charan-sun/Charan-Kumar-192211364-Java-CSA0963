public class LengthOfLastWord {
    public static void main(String[] args) {
        String s = "Hello World";
        int length = 0;

        String[] words = s.split(" ");

        if (words.length > 0) {
            length = words[words.length - 1].length();
        }

        System.out.println("Length of last word in \"" + s + "\" is: " + length);
    }
}
