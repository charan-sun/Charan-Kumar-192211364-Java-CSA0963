import java.util.Scanner;

public class EmployeeBonus {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter the salary: $");
        double salary = scanner.nextDouble();
        System.out.print("Enter the grade (A or B): ");
        char grade = scanner.next().charAt(0);
        
        double bonusPercentage = 0.0;
        if (salary < 10000) {
            bonusPercentage = 7.0; // 5% + 2%
        } else {
            switch (grade) {
                case 'A':
                    bonusPercentage = 5.0;
                    break;
                case 'B':
                    bonusPercentage = 10.0;
                    break;
                default:
                    System.out.println("Invalid grade.");
            }
        }
        
        double bonusAmount = salary * (bonusPercentage / 100);
        double totalSalary = salary + bonusAmount;
        
        System.out.println("Bonus amount: $" + bonusAmount);
        System.out.println("Total salary after bonus: $" + totalSalary);
        
        scanner.close();
    }
}
